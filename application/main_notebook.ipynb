    "import json\n",
    "import requests\n",
    "\n",
    "def ask_bot(utterance):\n",
    "    \n",
    "    headers = {\"Content-type\": \"application/json\", \"Accept\": \"text/plain\"}\n",
    "    data = json.dumps({\"text\": utterance})\n",
    "\n",
    "    respond = requests.post('http://localhost:5000/ask', data=data, headers=headers)\n",
    "\n",
    "    return respond.json()"
   ]
